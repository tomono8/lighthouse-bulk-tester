{
  "name": "lighthouse-bulk-tester",
  "version": "1.0.0",
  "description": "A tool to measure Google Lighthouse scores for multiple websites",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "keywords": [
    "lighthouse",
    "performance",
    "bulk-testing",
    "web-performance",
    "cli-tool"
  ],
  "author": "Lighthouse Bulk Tester",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lighthouse": "^11.3.0",
    "chrome-launcher": "^1.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "assets": [
      "node_modules/lighthouse/lighthouse-core/audits/**/*",
      "node_modules/lighthouse/lighthouse-core/gather/**/*",
      "node_modules/lighthouse/lighthouse-core/config/**/*"
    ]
  }
} 